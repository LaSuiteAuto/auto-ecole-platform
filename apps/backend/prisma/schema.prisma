generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  users     User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  tenantId  String

  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  SECRETARY
  INSTRUCTOR
  STUDENT
}
